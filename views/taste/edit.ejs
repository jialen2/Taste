<%- include ("../partials/header") -%> 
    <div class="row">
        <h1 style="text-align: center">Edit <%= taste.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/taste/<%=taste._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= taste.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="address" value="<%= taste.address %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%= taste.image %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/taste">Go Back</a>
        </div>
    </div>