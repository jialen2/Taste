<%- include ("../partials/header") -%> 
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= taste.image %>" style="width: 100%">
                <div class="caption-full">
                    <div class="pull-right">
                        <h4 style="display: inline">Average Price: </h4>
                        <% if(taste.price==-1){%> 
                        <h4 style="display: inline">Price Unavailable</h4>
                        <%}else{%>
                        <h4 style="display: inline"><%=taste.price%></h4>
                        <% } %>
                    </div>
                    <h4><a><%=taste.name%></a></h4>
                    <div style="margin: 0 0 5px">
                        <h4 class="pull-right" style="margin: 0 0">Location: <%=taste.address%></h4>
                        <h4 style="display: inline"> Submitted By <%=taste.author.username%></h4>
                    </div>
                    <div class="pull-right">
                        <h4 style="display: inline">Rate: <%= taste.rate %></h4>
                        <h6 style="display: inline"><%= taste.rateNumber %> rated</h6>
                    </div>
                    <a class = "btn btn-info" style="display: block; width: 90px; margin: 0 0 5px" href="/taste/<%= taste._id %>/menu">See Menu</a>
                    <% if(currentUser && taste.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning" href="/taste/<%= taste._id %>/edit" style="width: 65px">Edit</a>
                        <form action="/taste/<%= taste._id %>?_method=DELETE" method="POST" style="display: inline">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div>
                    <a class="btn btn-success" href="/taste/<%= taste._id %>/comments/new">Add New Comment</a>
                </div> 
                <form action="/rate" method="POST" class="rating" style="margin: 10px 0">
                     <button class="btn btn-primary" style="display: inline; width: 150px">Rate It Now</button>
                    <input type="radio" id="star5" name="rating" value="5" /><label class = "full" for="star5" title="Awesome - 5 stars"></label>
                    <input type="radio" id="star4half" name="rating" value="4 and a half" /><label class="half" for="star4half" title="Pretty good - 4.5 stars"></label>
                    <input type="radio" id="star4" name="rating" value="4" /><label class = "full" for="star4" title="Pretty good - 4 stars"></label>
                    <input type="radio" id="star3half" name="rating" value="3 and a half" /><label class="half" for="star3half" title="Meh - 3.5 stars"></label>
                    <input type="radio" id="star3" name="rating" value="3" /><label class = "full" for="star3" title="Meh - 3 stars"></label>
                    <input type="radio" id="star2half" name="rating" value="2 and a half" /><label class="half" for="star2half" title="Kinda bad - 2.5 stars"></label>
                    <input type="radio" id="star2" name="rating" value="2" /><label class = "full" for="star2" title="Kinda bad - 2 stars"></label>
                    <input type="radio" id="star1half" name="rating" value="1 and a half" /><label class="half" for="star1half" title="Meh - 1.5 stars"></label>
                    <input type="radio" id="star1" name="rating" value="1" /><label class = "full" for="star1" title="Sucks big time - 1 star"></label>
                    <input type="radio" id="starhalf" name="rating" value="half" /><label class="half" for="starhalf" title="Sucks big time - 0.5 stars"></label>
                    <input name="id" value = "<%= taste._id %>">                  
                </form>        
                <hr>
            </div>
        </div>
    </div>